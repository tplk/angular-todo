{
  "name": "angular-todo",
  "version": "0.0.0",
  "description": "Angular TODO example application.",
  "author": {
    "name": "Dmitry Teplov",
    "email": "teplov.work@gmail.com",
    "url": "https://github.com/tplk"
  },
  "license": "AGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/tplk/angular-todo.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check --aot",
    "start:hmr": "ng serve --disable-host-check --progress --aot --hmr -e=hmr",
    "start:jit": "ng serve --disable-host-check",
    "start:jit:hmr": "ng serve --disable-host-check --progress --hmr -e=hmr",
    "build": "ng build --prod",
    "lint": "ng lint --type-check && stylelint \"src/**/*.?(s)css\" --custom-formatter=node_modules/stylelint-formatter-pretty",
    "lint:fix": "ng lint --type-check --fix --force && stylelint \"src/**/*.?(s)css\" --fix --custom-formatter=node_modules/stylelint-formatter-pretty || true",
    "test": "ng test --watch=false --single-run",
    "test:watch": "ng test",
    "e2e": "ng e2e --prod"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@angular/animations": "5.2.8",
    "@angular/common": "5.2.8",
    "@angular/compiler": "5.2.8",
    "@angular/core": "5.2.8",
    "@angular/forms": "5.2.8",
    "@angular/http": "5.2.8",
    "@angular/platform-browser": "5.2.8",
    "@angular/platform-browser-dynamic": "5.2.8",
    "@angular/router": "5.2.8",
    "core-js": "2.5.3",
    "rxjs": "5.5.6",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.7.3",
    "@angular/compiler-cli": "5.2.8",
    "@angular/language-service": "5.2.8",
    "@angularclass/hmr": "2.1.3",
    "@types/jasmine": "2.8.6",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "9.4.7",
    "codelyzer": "4.2.1",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "0.2.2",
    "protractor": "5.3.0",
    "rxjs-tslint-rules": "3.15.0",
    "stylelint": "9.1.1",
    "stylelint-config-recommended-scss": "3.1.0",
    "stylelint-config-sass-guidelines": "5.0.0",
    "stylelint-formatter-pretty": "1.0.3",
    "stylelint-order": "0.8.1",
    "stylelint-scss": "2.5.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  }
}
